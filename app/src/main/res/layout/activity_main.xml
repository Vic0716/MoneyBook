<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:layout_gravity="center"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:text="@string/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <ImageView
            android:id="@+id/imageview_add"
            android:layout_marginEnd="12dp"
            android:layout_gravity="end|center"
            android:src="@drawable/add"
            android:layout_width="48dp"
            android:layout_height="48dp">
        </ImageView>
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="#AA7942"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 日期主體 -->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/textview_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2012年12月"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:id="@+id/imageview_left"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/arrow_back_icons"></ImageView>

                <ImageView
                    android:id="@+id/imageview_right"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_forward_icons"></ImageView>

            </RelativeLayout>

            <GridView
                android:background="@color/white"
                android:id="@+id/gridview_date"
                android:numColumns="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </GridView>

        </LinearLayout>
        <!-- 日期主體 -->



        <FrameLayout
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_marginBottom="56dp"
                android:id="@+id/listview_items"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>

            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/note_focus"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp">
                    </ImageView>

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center|bottom"
                        android:text="記事本"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/framelayout_export_csv"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/export_unfocus"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp">
                    </ImageView>

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center|bottom"
                        android:text="匯出CSV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>


    </LinearLayout>



</LinearLayout>